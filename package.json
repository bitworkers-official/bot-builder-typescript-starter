{
  "name": "bot-builder-typescript-starter",
  "version": "1.0.0",
  "description": "Starter template for a chatbot with Microsoft's Botbuilder SDK",
  "author": "Bitworkers",
  "license": "MIT",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "new": "hygen new",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
      "test": "jest --coverage",
    "test:watch": "jest --watch",
    "docs": "vuepress dev"
  },
  "gitHooks": {
    "pre-commit": "cross-env PRE_COMMIT=true lint-staged"
  },
  "dependencies": {
    "botbuilder": "^4.2.1",
    "botbuilder-dialogs": "^4.2.1",
    "botframework-config": "^4.2.1",
    "dotenv": "^6.2.0",
    "path": "^0.12.7",
    "restify": "^8.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.6",
    "@types/restify": "^7.2.8",
    "@types/shortid": "0.0.29",
    "eslint": "^5.14.1",
    "eslint-config-bitworkers": "^1.17.0",
    "hygen": "^2.1.2",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-config-bitworkers": "^1.5.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.3333",
    "vuepress": "^0.14.9"
  }
}
