{
  "name": "bot-builder-typescript-starter",
  "version": "1.0.0",
  "description": "Starter template for a chatbot with Microsoft's Botbuilder SDK",
  "author": "Bitworkers",
  "license": "MIT",
  "main": "src/server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitworkers-official/bot-builder-typescript-starter"
  },
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "new": "hygen new",
    "build": "tsc",
    "lint": "eslint . --ext .ts --fix && prettier --write src/**/*.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "docs": "vuepress dev",
    "docs:build": "vuepress build"
  },
  "dependencies": {
    "botbuilder": "^4.2.1",
    "botbuilder-adapter": "^1.0.7",
    "botbuilder-dialogs": "^4.2.1",
    "botframework-config": "^4.2.1",
    "dotenv": "^6.2.0",
    "restify": "^8.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.9",
    "@types/restify": "^7.2.8",
    "eslint": "^5.14.1",
    "eslint-config-bitworkers": "^1.18.2",
    "husky": "^1.3.1",
    "hygen": "^3.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-config-bitworkers": "^1.5.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.3333",
    "vuepress": "^1.0.0-alpha.39"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "{!(package)*.json,*.code-snippets,.*rc}": [
      "npx prettier --write",
      "git add"
    ],
    "package.json": [
      "npx prettier --write",
      "git add"
    ]
  }
}
