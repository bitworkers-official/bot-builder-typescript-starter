{
  "name": "bot-builder-typescript-starter",
  "version": "1.0.0",
  "description": "Starter template for a chatbot with Microsoft's Botbuilder SDK",
  "author": "Bitworkers",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "ts-node test/index.ts"
  },
  "dependencies": {
    "botbuilder": "^4.2.1",
    "botbuilder-dialogs": "^4.2.1",
    "botframework-config": "^4.2.1",
    "dotenv": "^6.2.0",
    "path": "^0.12.7",
    "restify": "^7.7.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/restify": "^7.2.7",
    "eslint": "^5.13.0",
    "eslint-config-bitworkers": "^1.15.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-config-bitworkers": "^1.5.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
